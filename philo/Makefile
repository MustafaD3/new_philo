NAME = philo
CC = cc
CFLAGS = -Wall -Wextra -Werror
SRC = main.c utils.c utils_two.c init_philo_and_forks.c threads.c philo_routine.c philo_sim.c
OBJS = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re